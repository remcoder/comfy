<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nl.remcoder.comfy.MainActivity$RoomFragment">

    <TextView
        android:id="@+id/RoomName"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:textSize="@dimen/RoomNameTextSize"
        android:layout_height="wrap_content"
        android:text="Keuken" />

    <TextView
        android:id="@+id/RoomTemperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="21.5Â°"
        android:layout_marginTop="58dp"
        android:layout_below="@+id/RoomName"
        android:layout_alignParentStart="true"
        android:textSize="50sp"
        android:textAlignment="center"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/RoomHumidity"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_height="wrap_content"
        android:text="42.0%"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/RoomTemperature"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/RoomIpAddress"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:textSize="@dimen/RoomIpAddress"
        android:layout_height="wrap_content"
        android:text="42.42.42.42"
        android:layout_marginBottom="43dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
